<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="annikatsai.portfolioapp.ProfileActivity">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_marginTop="33dp"
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:background="@android:color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_centerHorizontal="true"
        android:translationZ="10dp" />

    <ImageView
        android:id="@+id/ivCoverPhoto"
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvName"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ivCoverPhoto"
        android:layout_toLeftOf="@+id/ivProfilePicture"
        android:layout_toStartOf="@+id/ivProfilePicture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launchMap"
        android:id="@+id/btnLaunchMap"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="launchMap"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvEmail"
        android:layout_below="@+id/tvName"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvNumPosts"
        android:layout_below="@+id/tvEmail"
        android:layout_alignLeft="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail" />

</RelativeLayout>
