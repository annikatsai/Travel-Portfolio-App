<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="annikatsai.portfolioapp.ProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:id="@+id/ivProfilePicture"
        android:translationZ="10dp"
        android:layout_alignTop="@+id/ivCoverPhoto"
        android:layout_toRightOf="@+id/btnLaunchMap"
        android:layout_toEndOf="@+id/btnLaunchMap"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvName"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnLaunchMap"
        android:layout_alignStart="@+id/btnLaunchMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launchMap"
        android:id="@+id/btnLaunchMap"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="launchMap"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvEmail"
        android:layout_below="@+id/tvName"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName" />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="230dp"
        android:id="@+id/ivCoverPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
