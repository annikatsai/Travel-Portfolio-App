<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="annikatsai.portfolioapp.PostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="left"
            />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTitle"
        android:fontFamily="sans-serif-medium"
        android:background="@android:color/transparent"
        android:hint="@string/titleHint"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@android:color/transparent"
        android:id="@+id/etBody"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="@string/bodyHint"
        android:gravity="top|left"
        android:layout_below="@+id/tvDivider"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:fontFamily="sans-serif-light"
        android:hint="@string/dateHint"
        android:textSize="17sp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/etTitle"
        android:layout_toRightOf="@+id/fabDate"
        android:layout_toEndOf="@+id/fabDate"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_a_picture"
        android:id="@+id/btnAdd"
        android:onClick="onAddClick"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fabLocation"
        android:layout_alignStart="@+id/fabLocation"
        android:layout_marginBottom="138dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/searchLocation"
        android:id="@+id/tvLocation"
        android:fontFamily="sans-serif-light"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/fabDate"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:id="@+id/tvDivider"
        android:layout_below="@+id/fabLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_date"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="mini"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="showDatePickerDialog"
        android:id="@+id/fabDate"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_alignLeft="@+id/etTitle"
        android:layout_alignStart="@+id/etTitle" />


    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_location"
        app:backgroundTint="@color/colorAccent"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        app:fabSize="mini"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/fabLocation"
        android:onClick="selectLocation"
        android:layout_alignBottom="@+id/tvLocation"
        android:layout_alignLeft="@+id/fabDate"
        android:layout_alignStart="@+id/fabDate" />


    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/submit"-->
        <!--android:textAllCaps="false"-->
        <!--android:id="@+id/btnSave"-->
        <!--android:onClick="onSubmit"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignRight="@+id/tvDivider"-->
        <!--android:layout_alignEnd="@+id/tvDivider" />-->

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_check"
        app:backgroundTint="@color/colorAccent"
        android:tint="@android:color/white"
        android:scaleType="center"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabSubmit"
        android:onClick="onSubmit"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etBody"
        android:layout_alignEnd="@+id/etBody" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUri"
        android:textSize="14sp"
        android:hint="@string/hintForUri"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

