<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="annikatsai.portfolioapp.ViewPostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="left"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="New Text"
        android:fontFamily="sans-serif-medium"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@android:color/transparent"
        android:id="@+id/tvBody"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="New Text"
        android:gravity="top|left"
        android:layout_below="@+id/tvDivider"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:fontFamily="sans-serif-light"
        android:hint="@string/dateHint"
        android:textSize="17sp"
        android:layout_marginTop="19dp"
        android:text="New Text"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/fabDate"
        android:layout_toEndOf="@+id/fabDate"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/searchLocation"
        android:id="@+id/tvLocation"
        android:text="New Text"
        android:fontFamily="sans-serif-light"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/fabDate"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:id="@+id/tvDivider"
        android:layout_below="@+id/fabLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_date"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="mini"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/fabDate"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle" />


    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_location"
        app:backgroundTint="@color/colorAccent"
        android:tint="@android:color/white"
        android:scaleType="fitCenter"
        app:fabSize="mini"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/fabLocation"
        android:layout_alignBottom="@+id/tvLocation"
        android:layout_alignLeft="@+id/fabDate"
        android:layout_alignStart="@+id/fabDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:id="@+id/btnFinishView"
        android:onClick="onFinishView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:id="@+id/btnShare"
        android:onClick="onShareClick"
        android:layout_alignBottom="@+id/btnFinishView"
        android:layout_toRightOf="@+id/btnFinishView"
        android:layout_toEndOf="@+id/btnFinishView" />

</RelativeLayout>
